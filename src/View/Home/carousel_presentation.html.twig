{% block carousel_presentation %}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div>
  <h1>Amenez vos playlists partout avec vous</h1>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src='/../../../public/assets/images/play.png' class="d-block">
            <h1>Créer des playlists</h1>
        </div>
        <div class="carousel-item">
            <img src='/public/assets/images/stop.png' class="d-block">
            <h1>Aucune publicité</h1>
        </div>
        <div class="carousel-item">
            <img src='public/assets/images/network.png' class="d-block">
            <h1>Partage tes créations avec la communauté</h1>
        </div>
    </div>
    <div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
    </div>
</div>

{% endblock %}