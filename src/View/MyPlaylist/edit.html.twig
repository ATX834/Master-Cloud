{% extends 'layout.html.twig' %}
{% block navbar %}
    {% include 'Components/navbar.html.twig'%}
{% endblock %}

{% block content %}

{% if errors %}
    {% for error in errors %}
       <p style='color : #FF0000'>{{ error }}</p>
    {% endfor %}
{% endif %}

<div class="card card-columns mx-auto" style="width: 25rem;">
    <div class="card-body">
        <form class="form-group" action='/myPlaylist/create' method='post' enctype="multipart/form-data">
            
            <div class="col">
                <input class="form-control" type="text" id='nom-playlist' name="nom-playlist" placeholder="Nouveau nom de votre playlist" required>
            </div>

            <div class="input-group col mt-4 mb-4">
                <div class="custom-file">
                    <label for="exampleFormControlFile1"></label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
            </div>

            <div class="col mt-2">
                <p><b>Visibilité de votre playlist pour la communauté MasterCloud</b></p>
            </div>
            <div class="form-check mb-2 mr-sm-2">
                <label class="col-6 form-check-label" for="privee">Privée</label>
                <input class="col-1 form-check-input" type="radio" id="privee" name="est-privee" value="privee" required>
            </div>

            <div class="form-check mb-2 mr-sm-2">
                <label class="col-6 form-check-label" for="publique">Publique</label>
                <input class="col-1 form-check-input" type="radio" id="publique" name="est-privee" value="publique" required>
            </div>

            <button name="envoyer" class="col btn btn-info mt-4 mb-2">Modifier</button>
        </form>
    </div>
</div>
{% endblock %}
