<img src="/{{playlist.image}}" class="card-img">

<div class="text-center text-white">
    {{playlist.nom}}
</div>

<div class="text-center text-white">
    CrÃ©Ã© par: {{ playlist.utilisateur }}
</div>

<div class="vote d-flex align-items-center">
    <div class="vote_bar flex-grow-1">
        <div class="vote_progress" style="width:{{(playlist.nombre_likes + playlist.nombre_dislikes) == 0 ? 100 : (100 * (playlist.nombre_likes/(playlist.nombre_likes + playlist.nombre_dislikes)))}}%"></div>
    </div>

    <a href="/explorer/likes?playlist_id={{ playlist.id }}" data-playlist-id="{{ playlist.id }}" data-vote="1" class="btn vote_btn vote_like">
        <i class="bi bi-hand-thumbs-up"></i>
        <span class="vote-count">{{playlist.likes}}</span>
    </a>

    <a href="/explorer/dislikes?playlist_id={{ playlist.id }}" data-playlist-id="{{ playlist.id }}" data-vote="0" class="btn vote_btn vote_like">
        <i class="bi bi-hand-thumbs-down"></i>
        <span class="vote-count">{{playlist.dislikes}}</span>
    </a>
</div>