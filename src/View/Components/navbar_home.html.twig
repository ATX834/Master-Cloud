{% block navbar %}
<nav class="navbar bg-none navbar-expand-lg navbar-light">
  <div class="container-fluid">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="row w-100">
        <ul class="navbar-nav w-100">

          {# Si l'utilisateur EST connecté, alors on affiche seulement les boutons suivants #}
            {% if is_logged %}
                <a class="navbar-brand col-1" href="/home/index">
                  <img src="/assets/images/logo.png" alt="logo">
                </a>
                <li class="nav-Explorer">
                  <a class="nav-link col-1 pt-3" href="/explorer/index" >Explorer<span class="sr-only"></a>
                </li>
                
                <form method="POST" action="/explorer" class="w-100 pt-2">
                {# Pour la barre de recherche #}
                  <input class="searchBar form-control col-7 offset-3" type="search" placeholder="Votre recherche" aria-label="Search">
                </form>
                <li class="nav-Login col-2">
                  <a class="nav-link pt-3"  href="/myAccount/index">Mon compte<span class="sr-only"></a>
                </li>
                <li class="nav-Login col-1">
                  <a class="nav-link" href="/logOut/index">
                    <i class="bi bi-box-arrow-right" style="color:white; font-size:1.5em" ></i>
                    <span class="sr-only">
                  </a>
                </li>
              {# Si l'utilisateur N'EST PAS connecté, alors on affiche les boutons suivants #}
            {% else %}  
              <a class="navbar-brand col-1" href="/home/index">
                <img src="/assets/images/logo.png" alt="logo">
              </a>
              <form method="POST" action="/explorer" class="w-100">
                {# Pour la barre de recherche #}
                <input class="searchBar form-control col-5 offset-3" type="search" placeholder="Votre recherche" aria-label="Search">
              </form>
              <li class="nav-Login-1">
                <a class="nav-link col-1 offset-3" href="/login/index">
                  <i class="far fa-user" style="font-size: 1.5em"></i>
                  <span class="sr-only">
                </a>
              </li>
            {% endif %}
        </ul>
      </div>
    </div>
  </div>
</nav>
{% endblock %}
